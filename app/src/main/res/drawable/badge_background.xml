<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/colorAccent"/>

    <!-- Border color and width -->
    <stroke
        android:width="@dimen/badge_border_stroke"
        android:color="@color/colorPrimary"/>

    <!-- Border radius -->
    <corners android:radius="2dp"/>

    <padding
        android:top="@dimen/badge_padding_vertical"
        android:right="@dimen/badge_padding_horizontal"
        android:bottom="@dimen/badge_padding_vertical"
        android:left="@dimen/badge_padding_horizontal"/>
</shape>